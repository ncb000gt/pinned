!!! 5
html
  head
    title Pinned

    link(href="css/main.css", rel="stylesheet", type="text/css")
    link(href="http://fonts.googleapis.com/css?family=Overlock", rel="stylesheet", type="text/css")
    link(href="http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300", rel="stylesheet", type="text/css")

  body
    #wrap
      header.header
        h1 
          a(href="/") Pinned
        nav
          ul.view-filter
            li.bookmarklet
              - if (bookmarklet)
                a.button(href=bookmarklet) Pin This
            li.current
              a(href="#grid-view") Grid
            li
              a(href="#grid-view") List
          ul.sort-filter
            li
              a(href="#tags-menu") Tags
              ul
                li
                  a(href="#items") Item
            li
              a(href="#categories-menu") Categories
              ul
                li
                  a(href="#items") Item

      section.content
        !{body}

      footer.footer
        p 
          span Pinned - &copy; 2012 
          a(href="https://github.com/ncb000gt/pinned") Github 
          a.logout.alignRight(href="/logout") Logout
